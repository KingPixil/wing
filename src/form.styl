/*=============================
  Form
=============================*/

input[type=text], input[type=password], input[type=email], input[type=search], input[type=number], input[type=file], input[type=tel], input[type=url], select, textarea
  height: 45px
  width: 100%

  margin-bottom: 10px
  padding: 10px

  font-size: typography-size-base
  background: color-white

  border-round(color-gray)

  transition: transition

  &:hover
    border-color: color-black

  &:focus
    outline: none
    border-color: color-blue

textarea
  min-height: 70px

select
  -webkit-border-radius: 2px
  -webkit-appearance: none
  background: color-white url('data:image/svg+xml;base64,') no-repeat
  background-position: right 10px top 50%
  background-size: 12px 12px
